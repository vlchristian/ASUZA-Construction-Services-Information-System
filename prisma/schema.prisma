generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


enum Role {
  ADMIN
  TEAM_LEADER
  OFFICE_STAFF
  WORKER
  UNASSIGNED
}

enum UserStatus {
  PENDING_APPROVAL
  ACTIVE
  INACTIVE
  REJECTED
}

enum ProjectStatus {
  NOT_STARTED
  ONGOING
  COMPLETED
  CANCELLED
  ON_HOLD
}


model User {
  userID     String     @id @default(cuid())
  email      String  @unique
  username   String  @unique
  password   String
  fullName   String

  role       Role    @default(UNASSIGNED)
  status     UserStatus @default(PENDING_APPROVAL)

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  project Project? @relation(fields: [projectId], references: [projectID])
  projectId String?
}

model Project {
  projectID          String   @id @default(cuid())
  projectName        String
  projectLocation    String
  projectStatus     ProjectStatus   @default(NOT_STARTED)
  
  users       User[]   
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}